{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="centered">
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Connect√© en tant que {{ app.user.userIdentifier }}.
            <br>
            <a href="{{ path('app_prestation_index') }}">Acceuil</a>
        </div>

    {% else %}
    <h1>Connexion</h1>

    <form method="post">
        <input type="hidden" name="redirectTo" value="{{ redirectTo }}">
        <div class="form-group" style="margin-bottom: 1rem;">
            <label for="inputEmail">Email</label>
            <input
                type="email"
                value="{{ last_username }}"
                name="email"
                id="inputEmail"
                class="form-control"
                autocomplete="email"
                required
                autofocus
                style="width: 100%; padding: 0.5rem; border-radius: 5px; border: 1px solid #ccc;"
            >
        </div>

        <div class="form-group" style="margin-bottom: 1rem;">
            <label for="inputPassword">Mot de passe</label>
            <input
                type="password"
                name="password"
                id="inputPassword"
                class="form-control"
                autocomplete="current-password"
                required
                style="width: 100%; padding: 0.5rem; border-radius: 5px; border: 1px solid #ccc;"
            >
        </div>

        <input
            type="hidden"
            name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <button type="submit" class="button-retour" style="width: 100%;">
            Connexion
        </button>
    </form>
    {% endif %}
</div>
{% endblock %}
